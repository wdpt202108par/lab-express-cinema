<div id="movieDetails">
  <img src= "{{movie.image}}"/>

  <div id="text"> 
    <a href="/movies">Go back</a>

    <h1>{{movie.title}}</h1>

    <h2>Director: {{movie.director}}</h2>

    <h3>Stars</h3>
    {{#each movie.stars}}
      <li>{{this}}</li>
    {{/each}}

    <p>{{movie.description}}</p>

    {{#each movie.showtimes}}
      <p>{{this}} |</p>
    {{/each}}
 
  </div>

</div>